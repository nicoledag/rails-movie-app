<div class="container-form">

<h2>Order Tickets</h2>

<h4> <%= "#{@showtime.format_date}" %> </h4> 
<h4> <%= "#{@showtime.format_time}" %> </h4> 
<h4> <%= "Seats Available: #{@showtime.seats_available}" %> </h4> 
<h4> <%= "Seat Cost: $ #{@showtime.seat_cost}.00" %> </h4> 


<% if !logged_in? %>
<h3><%= link_to "Login Here", login_path %></h3>
<h3>OR</h3>
<h3>Check Out Below as Guest</h3>
<% end %>

<%=form_for @order do |f| %>

  <%= render partial: 'layouts/errors', locals: {object: @order} %>
  

 <%= f.hidden_field :showtime_id, :value => @showtime.id %>
 
 <div class="row"> 
  <%= f.label :total_seats_selected %>
  <%= f.number_field :total_seats_selected, required: true, length: { in: 1..6 } %>
 </div>

 <div class="row"> 
  <%= f.label :credit_card_number %>
  <%= f.text_field :credit_card_number, required: true %>
 </div>
 
 <div class="row"> 
  <%= f.label :expiration_date %>
  <%= f.date_field :expiration_date, required: true %>
 </div>
 
  <%= submit_tag "Submit" %>
<% end %>

</div>


