<div class="container-form">

<h2>Order Tickets</h2>

<h4> <%= "#{@order.showtime.format_date}" %> </h4> 
<h4> <%= "#{@order.showtime.format_time}" %> </h4> 
<h4> <%= "Seats Available: #{@order.showtime.seats_available}" %> </h4> 
<h4> <%= "Seat Cost: $ #{@order.showtime.seat_cost}.00" %> </h4> 

<%=form_for @order do |f| %>

  <%= render partial: 'layouts/errors', locals: {object: @order} %>
  

 <%= f.hidden_field :showtime_id, :value => @order.showtime_id %>
 
 <div class="row"> 
  <%= f.label :total_seats_selected %>
  <%= f.number_field :total_seats_selected %>
 </div>

 <div class="row"> 
  <%= f.label :credit_card_number %>
  <%= f.text_field :credit_card_number %>
 </div>
 
 <div class="row"> 
  <%= f.label :expiration_date %>
  <%= f.date_field :expiration_date %>
 </div>
 
  <%= submit_tag "Submit" %>
<% end %>

</div>